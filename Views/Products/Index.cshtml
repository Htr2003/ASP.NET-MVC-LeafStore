@model IEnumerable<LeafStore.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="height:50px">

</div>
<h2 style="text-align:center">DANH SÁCH SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Thêm sản phẩm", "Create",null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
@*        <th>
            Mô tả
        </th>*@
        <th>
            Giá bán
        </th>
@*        <th>
            Ảnh minh họa
        </th>*@
        <th>
            Thể loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NamePro)
        </td>
@*        <td>
            @Html.DisplayFor(modelItem => item.DecriptionPro)
        </td>*@
        <td>
            @String.Format("{0:c0}", item.Price)
        </td>
@*        <td>
            @Html.DisplayFor(modelItem => item.ImagePro)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Category1.NameCate)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ProductID } ,new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ProductID },new { @class = "btn btn-success" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ProductID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
