@model IEnumerable<LeafStore.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div style="margin: 10px auto; width: 95%;display:flex " >
    <div style="width:25%; padding: 20px 0 20px 0; float:left">
        <ul style="padding:10px;list-style-type:none " class="list-group">
            <li> <a class="list-group-item list-group-item-action list-group-item-danger" href="~/Home/AllProducts">TẤT CẢ SẢN PHẨM</a></li>
        </ul>
        @Html.Action("GetProductsByCategory", "Home")
    </div>
    <div style="width:75%; padding:20px 0 20px 5%; float:left;">
        <!-- Carousel -->
        <div id="demo" class="carousel slide" data-bs-ride="carousel">

            <!-- Indicators/dots -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
            </div>
            <!-- The slideshow/carousel -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Image/Bia1.png" class="d-block" style="width:100%;height:auto">
                </div>
                <div class="carousel-item">
                    <img src="~/Image/Bia2.png" class="d-block" style="width: 100%; height: auto">
                </div>
                <div class="carousel-item">
                    <img src="~/Image/Bia3.png" class="d-block" style="width:100%;height:auto ">
                </div>
            </div>

            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</div>
@*<div style="height:100px">

</div>*@
<div style="margin: 10px auto; width: 85%; padding:0 0 30px 0">
    <h4 style="text-align:center">Một số sản phẩm nổi bật</h4>
    <hr />
    <div class="row">
        @foreach (var sanpham in Model)
        {
            <div style="padding:5px" class="col-xxl-2 col-xl-3 col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card container pt-2">
                    <a href="@Url.Action("Details", new { id = sanpham.ProductID })">
                        <img class="card-img-top " src="~/Image/@sanpham.ImagePro" width="150" height="250">
                    </a>
                    <div class="card-body" style="text-align: center">
                        <a href="@Url.Action("Details", new { id = sanpham.ProductID })" )>
                            <div style="height:70px"><h6 class="card-title text">@sanpham.NamePro</h6></div>
                        </a>
                        <p class="card-text">@String.Format("{0:0,0}", sanpham.Price)</p>
                        <a class="btn btn-danger" href="@Url.Action("AddToCart","Cart", new {id=sanpham.ProductID})">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
    
    

